<div class="container">
  <div class="row">
    <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
        <div class="form">
        <%= simple_form_for @jet do |f| %>
          <%= f.input :name %>
          <%= f.input :description, class: "form-control-width" %>
          <%= f.input :has_service, as: :select %>
          <%= f.input :max_capacity, collection: 1..10 %>
          <%= f.association :airport_origin %>
          <%= f.association :airport_destination %>
          <%= f.input :price %>
          <%= f.submit "Edit Jet", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

