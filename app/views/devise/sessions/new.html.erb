<div class="container-fluid">

  <div id="side-image" class="image-fader" style="background-image: url('http://privatejetcharteriq.com/wp-content/uploads/2016/04/photodune-6700048-confident-woman-carrying-shopping-bags-while-boarding-private-je-l.jpg');"></div>

  <div class="login-container">

    <div class="intro-container">
      <p id="title">Jet Lag</p>
      <p id="welcome">Welcome.</p>
      <p id="tosignup">New to Jet Lag? <%= link_to "Sign up", :new_user_registration, class: "linksu" %></p>
    </div>

    <div class="row">
      <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
        <div class="form">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


            <%= f.input :email, required: false, autofocus: true, label: false, placeholder: "Enter your email" %>
            <%= f.input :password, required: false, label: false, placeholder: "Your password" %>

          <div class="form-actions">
            <%= f.button :submit, "Log in" %>
          </div>

          <div class="form-check">
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <% end %>

          <div class="forgotpw">
            <%= link_to "Forgot password?", user_registration_path %>
          </div>

          <br>
          <p id="tosignup">Coming Soon!</p>

          <div id="fb-btn">
              <i class="fa fa-facebook-square"></i><p>Connect with Facebook<p>
          </div>

          <div id="gg-btn">
              <i class="fa fa-google"></i><p>Connect with Google<p>
          </div>

        </div>
      </div>
    </div>
  </div>

  <div id="closing-cross">
    <%= link_to :jets do %>
      <i class="fa fa-times"></i>
    <% end %>
  </div>
</div>


